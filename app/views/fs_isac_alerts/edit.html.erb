<div class="ui container">

  <h1>FS-ISAC alert #<%= @alert.tracking_id %></h1>

  <%= form_for @alert, url: fs_isac_alert_path(@alert), method: :patch do |f| %>
    <div class="ui form">

      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :applies %>
          <%= f.label :applies, "Applies?" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :severity %>
        <div class="ui selection dropdown">
          <input type="hidden" name="fs_isac_alert[severity]">
          <i class="dropdown icon"></i>
          <div class="default text">Severity</div>
          <div class="menu">
            <% (FsIsacAlert::SEVERITY_MIN..FsIsacAlert::SEVERITY_MAX).each do |i| %>
              <div class="item" data-value="<%= i %>"><%= i %></div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :resolved %>
          <%= f.label :resolved, "Resolved?" %>
        </div>
      </div>
      
      <div class="field">
        <%= f.label :comment %>
        <%= f.text_area :comment %>
      </div>

      <div class="field">
        <%= f.submit class: "primary ui button" %>
      </div>
    </div>
  <% end %>
</div>
