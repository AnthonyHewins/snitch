<div class="ui container">
  <div class="ui center aligned">
    <div class="ui padded segment">
      <h2 class="ui blue image header">
        <div class="content">
          Login
        </div>
      </h2>

      <%= form_tag login_path, method: :post, class: "ui large form" do %>
        <div class="stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= text_field_tag :name, nil, placeholder: "Name" %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= password_field_tag :password, nil, placeholder: "Password" %>
            </div>
          </div>
          <%= submit_tag "Login", id: "login", class: "ui fluid large blue submit button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
